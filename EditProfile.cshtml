@model StarEvents.Models.User

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-primary mb-4">
                <i class="fas fa-user-edit me-2"></i> @ViewData["Title"]
            </h1>

            <div class="card shadow-lg p-4">
                <h4 class="card-title mb-3 border-bottom pb-2 text-danger">Update Your Details</h4>

                <form asp-action="EditProfile" method="post">
                    @* Hidden input for Id is essential for the POST action to identify the user *@
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" readonly />
                        <small class="text-muted">Email address is read-only for security.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-action="MyProfile" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}