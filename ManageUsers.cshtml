@* StarEvents.Views/Admin/ManageUsers.cshtml (Extended Version) *@
@using StarEvents.ViewModels
@model ManageUsersViewModel

@{
    ViewData["Title"] = "Manage Users";

    // Helper function to dynamically assign a Bootstrap badge color based on role
    string GetRoleBadgeClass(string role) => role switch
    {
        "Admin" => "bg-danger",
        "Organizer" => "bg-primary",
        "Customer" => "bg-success",
        _ => "bg-secondary", // Default color for unknown roles
    };

    // Assume you have these properties in AdminDashboardViewModel or ViewBag
    // For this example, we'll use mock data.
    int totalUsers = Model.Users.Count;
    int activeUsers = totalUsers - 1; // Mock: one user is inactive
    int adminCount = Model.Users.Count(u => u.Role == "Admin");
    int organizerCount = Model.Users.Count(u => u.Role == "Organizer");
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold mb-0">
            <i class="fas fa-users-cog me-2"></i> User Management
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/Admin/Index" class="text-secondary">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Manage Users</li>
            </ol>
        </nav>
    </div>

    <p class="text-muted mb-4">
        Comprehensive overview and management console for all registered users in the system.
    </p>

    <div class="row mb-5">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Users</p>
                                <h5 class="font-weight-bolder text-primary">@totalUsers</h5>
                                <p class="mb-0"><span class="text-success text-sm font-weight-bolder">+@activeUsers</span> Active</p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-primary text-white text-center rounded-circle">
                                <i class="fas fa-users opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Admin Accounts</p>
                                <h5 class="font-weight-bolder text-danger">@adminCount</h5>
                                <p class="mb-0"><span class="text-danger text-sm font-weight-bolder">High Security</span></p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-danger text-white text-center rounded-circle">
                                <i class="fas fa-user-shield opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Organizers</p>
                                <h5 class="font-weight-bolder text-info">@organizerCount</h5>
                                <p class="mb-0"><span class="text-info text-sm font-weight-bolder">Event Creators</span></p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-info text-white text-center rounded-circle">
                                <i class="fas fa-calendar-check opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Customers</p>
                                <h5 class="font-weight-bolder text-success">@(totalUsers - adminCount - organizerCount)</h5>
                                <p class="mb-0"><span class="text-success text-sm font-weight-bolder">Standard Access</span></p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-success text-white text-center rounded-circle">
                                <i class="fas fa-ticket-alt opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12 d-flex justify-content-between align-items-center">

            <a asp-action="AddUser" class="btn btn-primary btn-lg shadow-sm" style="background-color: #5E72E4; border-color: #5E72E4;">
                <i class="fas fa-plus me-1"></i> Add New User
            </a>

            <form asp-action="ManageUsers" method="get" class="d-flex" style="width: 400px;">
                <input type="text"
                       name="searchTerm"
                       class="form-control me-2 shadow-sm"
                       placeholder="Search by Username or Email..."
                       value="@Model.SearchTerm" />
                <button type="submit" class="btn btn-primary shadow-sm"><i class="fas fa-search"></i> Search</button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a asp-action="ManageUsers" class="btn btn-outline-secondary ms-2 shadow-sm"><i class="fas fa-times"></i> Clear</a>
                }
            </form>
        </div>
    </div>

    <div class="card shadow-lg border-0 mb-5">
        <div class="card-header bg-white border-bottom py-3">
            <h5 class="mb-0 text-dark fw-bold">
                <i class="fas fa-list me-2 text-primary"></i>User Directory
                <span class="badge @(Model.Users.Count > 0 ? "bg-info" : "bg-secondary") ms-2">@Model.Users.Count</span>
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Users.First().UserName)</th>
                            <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Users.First().Email)</th>
                            <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Users.First().Role)</th>
                            <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users.Any())
                        {
                            @foreach (var item in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <i class="fas fa-user-circle fa-lg me-2 text-secondary"></i>
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.UserName)</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.Email)</p>
                                    </td>

                                    <td>
                                        <span class="badge @GetRoleBadgeClass(item.Role) text-white shadow-sm" style="font-size: 0.8rem; padding: 0.5em 0.8em;">
                                            @Html.DisplayFor(modelItem => item.Role)
                                        </span>
                                    </td>

                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-2 shadow-sm" style="background-color: #17A2B8; border-color: #17A2B8;">
                                            <i class="fas fa-info-circle me-1"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2 shadow-sm" style="background-color: #FFC107; border-color: #FFC107;">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger shadow-sm" style="background-color: #DC3545; border-color: #DC3545;">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-5">
                                    <i class="fas fa-box-open fa-2x mb-3"></i>
                                    <p class="mb-0">No users found.</p>
                                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                    {
                                        <span class="d-block">Refining search for: <strong>"@Model.SearchTerm"</strong></span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 text-dark fw-bold">
                        <i class="fas fa-history me-2 text-warning"></i> Recent User Activity
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            **Admin** modified user **Damindupiyaranga** role.
                            <small class="text-muted">5 minutes ago</small>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            New user **Tharani** added by **Admin**.
                            <small class="text-muted">1 hour ago</small>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            **Netmiadhithya** attempted login with invalid password.
                            <small class="text-danger">3 hours ago</small>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            User **Admin** successfully logged in.
                            <small class="text-muted">4 hours ago</small>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            System cleanup: Removed 3 expired tokens.
                            <small class="text-muted">Yesterday</small>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>