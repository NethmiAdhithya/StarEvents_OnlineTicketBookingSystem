@model StarEvents.ViewModels.UserDetailsViewModel
@* If you are passing the StarEvents.Models.User model directly, change the above line. *@

@{
    ViewData["Title"] = "User Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-primary mb-4">
                <i class="fas fa-user-circle me-2"></i> User Details: @Model.UserName
            </h1>

            <div class="card shadow-lg p-4">
                <h4 class="card-title mb-3 border-bottom pb-2 text-secondary">Account Information</h4>

                <div class="row">

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">First Name</label>
                        <p class="form-control-static">@Model.FirstName</p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Last Name</label>
                        <p class="form-control-static">@Model.LastName</p>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">Email Address</label>
                        <p class="form-control-static">@Model.Email</p>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">Phone Number</label>
                        <p class="form-control-static">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Not Set" : Model.PhoneNumber)</p>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">Current Role</label>
                        <p class="form-control-static badge @(Model.Role == "Admin" ? "bg-danger" : Model.Role == "Organizer" ? "bg-primary" : "bg-success")">@Model.Role</p>
                    </div>

                    <div class="col-12 mt-4">
                        <a asp-action="ManageUsers" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i> Back to User List
                        </a>
                        @* You can link to an Edit User action here once implemented *@
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i> Edit User
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>