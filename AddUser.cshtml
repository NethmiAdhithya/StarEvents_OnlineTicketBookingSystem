@* StarEvents.Views/Admin/AddUser.cshtml (Professional & Colorful) *@
@model StarEvents.ViewModels.AddUserViewModel

@{
    ViewData["Title"] = "Add New User";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success fw-bold mb-0">
            <i class="fas fa-user-plus me-2"></i> Add New User
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-action="ManageUsers" class="text-secondary">User Management</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add User</li>
            </ol>
        </nav>
    </div>

    <p class="text-muted mb-5">
        Complete the form below to create a new user account, set initial credentials, and assign the appropriate security role.
    </p>

    <div class="card shadow-lg border-0 mx-auto" style="max-width: 700px;">

        <div class="card-header bg-success text-white py-3">
            <h5 class="mb-0 fw-bold"><i class="fas fa-edit me-2"></i> Account Details</h5>
        </div>

        <div class="card-body p-4">
            <form asp-action="AddUser" method="post">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <h6 class="text-primary text-uppercase fw-bold mb-3"><i class="fas fa-info-circle me-1"></i> Personal Information</h6>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label text-muted"></label>
                        <input asp-for="FirstName" class="form-control shadow-sm" placeholder="e.g., Alex" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label text-muted"></label>
                        <input asp-for="LastName" class="form-control shadow-sm" placeholder="e.g., Johnson" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label text-muted"></label>
                        <input asp-for="Email" class="form-control shadow-sm" placeholder="e.g., user@starevents.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="UserName" class="form-label text-muted"></label>
                        <input asp-for="UserName" class="form-control shadow-sm" placeholder="Used for login" />
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <h6 class="text-primary text-uppercase fw-bold mb-3"><i class="fas fa-lock me-1"></i> Security & Role</h6>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label text-muted"></label>
                        <input asp-for="Password" class="form-control shadow-sm" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label text-muted"></label>
                        <input asp-for="ConfirmPassword" class="form-control shadow-sm" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="SelectedRole" class="form-label text-muted"></label>
                    <select asp-for="SelectedRole" asp-items="ViewBag.Roles" class="form-control form-select shadow-sm">
                        <option value="">-- Select Role --</option>
                    </select>
                    <span asp-validation-for="SelectedRole" class="text-danger small"></span>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-end">
                    <a asp-action="ManageUsers" class="btn btn-outline-secondary me-3 shadow-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back to User List
                    </a>
                    <button type="submit" class="btn btn-success shadow-lg">
                        <i class="fas fa-user-plus me-1"></i> Create User Account
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}