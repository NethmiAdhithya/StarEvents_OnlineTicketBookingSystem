@model IEnumerable<StarEvents.ViewModels.EventsReportViewModel>

@{
    ViewData["Title"] = "Events Performance Report";
}

<div class="container mt-5">
    <h2 class="dashboard-header"><i class="fas fa-calendar-check me-2 text-info"></i>Events Performance Report</h2>
    <hr />

    <div class="alert alert-info">
        Total Events in System: **@Model.Count()**
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>@Html.DisplayNameFor(model => model.TotalTicketsSold)</th>
                <th>@Html.DisplayNameFor(model => model.AvailableTickets)</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Date.ToString("d MMM yyyy")</td>
                    <td>
                        <strong>@item.TotalTicketsSold</strong>
                    </td>
                    <td>
                        @(item.TotalTicketsSold > 0 ? $"{(item.TotalTicketsSold * 100) / (item.TotalTicketsSold + item.AvailableTickets):N0}% Sold" : "N/A")
                    </td>
                    <td>
                        <span class="badge @(item.Status == "Approved" ? "bg-success" : (item.Status == "Pending" ? "bg-warning text-dark" : "bg-danger"))">
                            @item.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Reports" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left me-1"></i>Back to Reports Menu</a>
</div>