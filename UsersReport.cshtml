@model IEnumerable<StarEvents.ViewModels.UsersReportViewModel>

@{
    ViewData["Title"] = "Users Report";
}

<div class="container mt-5">
    <h2 class="dashboard-header"><i class="fas fa-users me-2 text-primary"></i>Users Report</h2>
    <hr />

    <div class="alert alert-info">
        Total Registered Users: **@Model.Count()**
    </div>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th>@Html.DisplayNameFor(model => model.RegistrationDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>
                        <span class="badge @(item.Role == "Admin" ? "bg-danger" : (item.Role == "Organizer" ? "bg-warning text-dark" : "bg-primary"))">
                            @item.Role
                        </span>
                    </td>
                    <td>@item.RegistrationDate.ToString("d MMMM yyyy")</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Reports" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left me-1"></i>Back to Reports Menu</a>
</div>