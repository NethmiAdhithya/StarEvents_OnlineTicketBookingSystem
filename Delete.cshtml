@model StarEvents.ViewModels.UserDetailsViewModel

@{
    ViewData["Title"] = "Confirm User Deletion";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-danger mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i> @ViewData["Title"]
            </h1>

            <div class="card shadow-lg border-danger p-4">
                <h4 class="card-title mb-4 border-bottom pb-2 text-danger">
                    Are you sure you want to delete this user?
                </h4>
                <p class="text-muted">This action is **permanent** and cannot be undone.</p>

                <dl class="row mt-3">
                    <dt class="col-sm-4">User Name</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    <dt class="col-sm-4">Full Name</dt>
                    <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Current Role</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Role == "Admin" ? "bg-danger" : Model.Role == "Organizer" ? "bg-primary" : "bg-success")">@Model.Role</span>
                    </dd>
                </dl>

                <hr class="mt-4" />

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="ManageUsers" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-1"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>